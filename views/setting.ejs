<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setting</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/setting.css">
</head>

<body>

    <div class="sidebar">
        <!-- <div class="hamburger"><button>â˜° </button> </div> -->
        <div class="settings">
            <li><a class="general" href="#general" onclick="showContent('general')">General</a></li>
        </div>
        <div class="settings">
            <li><a class="changePassword" href="#changePassword" onclick="showContent('changePassword')">Change password</a></li>
        </div>

    </div>

    <div class="content" id="general">
        <!-- <p>General settings</p> -->
        <div class="tab-pane fade active show" id="account-general">
            <div class="card-body media align-items-center">
                <img src="/images/userDefault.jpg.png" alt="profile_image" class="profile_img" id="profileImage">
                <div class="media-body ml-4">
                    <label for="uploadInput" class="btn btn-outline-primary">
                        Upload new photo
                        <input type="file" id="uploadInput" class="account-settings-fileinput" style="display: none;">
                    </label>
                    &nbsp;
                    <button type="button" class="btn btn-default md-btn-flat btn-outline-danger" onclick="resetImage()">Reset</button>
                </div>
            </div>
        </div>
        <hr class="border-light m-0">
        <div class="card-body">
            <div class="form-group">
                <label class="form-label">Username</label>
                <input type="text" class="form-control mb-1" value="JiminCho02">
            </div>
            <div class="form-group">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" value="Jimin Cho">
            </div>
            <div class="form-group">
                <label class="form-label">E-mail</label>
                <input type="text" class="form-control mb-1" value="s3940575@rmit.edu.vn">

            </div>

        </div>
    </div>

    <div class="content" id="changePassword">

        <div class="form-group">
            <label class="form-label">Current password</label>
            <input type="password" class="form-control">
        </div>
        <div class="form-group">
            <label class="form-label">New password</label>
            <input type="password" class="form-control">
        </div>
        <div class="form-group">
            <label class="form-label">Repeat new password</label>
            <input type="password" class="form-control">
        </div>
    </div>

    <div class="content" id="info">
        <p>Information</p>
        <div class="card-body pb-2">
            <div class="form-group">
                <label class="form-label">Bio</label>
                <textarea class="form-control" rows="5">Hello I'm Jimin</textarea>
            </div>
            <div class="form-group">
                <label class="form-label">Birthday</label>
                <input type="text" class="form-control" value="July 6, 2002">
            </div>
            <div class="form-group">
                <label class="form-label">Country</label>
                <select class="custom-select">
                    <option selected>Vietnam</option>
                    <option>Korea</option>
                    <option>USA</option>
                    <option>Canada</option>
                    <option>UK</option>
                    <option>Germany</option>
                    <option>France</option>
                </select>
            </div>
        </div>
        <hr class="border-light m-0">
        <div class="card-body pb-2">
            <h6 class="mb-4">Contacts</h6>
            <div class="form-group">
                <label class="form-label">Phone</label>
                <input type="text" class="form-control" value="+84 966716414">
            </div>
            <div class="form-group">
                <label class="form-label">Website</label>
                <input type="text" class="form-control" value>
            </div>
        </div>
    </div>



    <div class="submitButton">
        <div class="text-right mt-3">
            <button type="button" class="btn btn-primary">Save changes</button>
            &nbsp;
            <button type="button" class="btn btn-danger">Cancel</button>
        </div>
    </div>

    <script src="/js/setting.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>