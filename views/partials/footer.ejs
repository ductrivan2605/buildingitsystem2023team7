    <script>
      $(document).ready(function () {
        // Function to toggle visibility of ul on mobile
        function toggleUlOnMobile() {
          if ($(window).width() <= 767) {
            $(this).find("ul").slideToggle();
          }
        }

        // Attach click event to footer-col elements
        $(".footer-col").on("click", toggleUlOnMobile);

        // Resize event to hide ul on larger screens
        $(window).resize(function () {
          if ($(window).width() > 767) {
            $(".footer-col ul").removeAttr("style");
          }
        });
      });
    </script>
