      <div class="user" id="userSection">
        <div class="user-info" onclick="toggleUserMenu()">
          <img
            id="userAvatar"
            src="https://bsnl.ch/wp-content/uploads/2019/03/avatar-default-circle.png"
            alt="User Avatar"
          />
          <span id="userName">User Name</span>
