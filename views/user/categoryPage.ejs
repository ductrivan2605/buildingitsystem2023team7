<div class="wrap">
  <div class="subCategory">
    <h1>
      <%= category.category %>
    </h1>
  </div>
  <nav class="navbar">
    <ul class="navbar__menu">
      <% category.subCategory.forEach(sub => { %>
        <li>
          <a href="/category/<%= category.slug %>/<%= sub %>">
            <%= sub %>
          </a>
        </li>
      <% }) %>
    </ul>
  </nav>
  
  <div class="mainContent">
    <div class="book-container">
      <% if (books.length > 0) { %>
        <% books.forEach(book => { %>
          <div class="book">
            <a href="/book/<%= book.slug %>"><img src="/images/<%= book.imageCover %>" alt="Fiction book 1" /></a>
            <h2><%= book.title %></h2>
            <p><%= book.authors.join(',') %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p>No books available</p>    
      <% } %>
    </div>
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= (currentPage - 1) %>" class="page-btn">&lt;</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
        <% if (
          (i >= currentPage - 2 && i <= currentPage + 2) ||
          (i === 1 && i !== currentPage - 3) ||
          (i === totalPages && i !== currentPage + 3)
        ) { %>
          <a href="?page=<%= i %>" class="page-btn <%= currentPage == i ? 'active' : '' %>"><%= i %></a>
        <% } else if (
          (i === currentPage - 3 && i !== 1) ||
          (i === currentPage + 3 && i !== totalPages)
        ) { %>
          <span class="page-btn">...</span>
        <% } %>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= (parseInt(currentPage) + 1) %>" class="page-btn">&gt;</a>
      <% } %>
    </div>
  </div>
</div>
