<!-- User Settings Form -->
<form action="/user/setting/update/<%= user._id %>" method="post" enctype="multipart/form-data">
    <!-- General Settings -->
    <div id="general" class="content">
        <div class="card-body media align-items-center">
            <img src="<%= user.image %>" alt="User Profile Image" class="profile_img" id="profileImage">
            <label for="editProfileImage" class="btn btn-outline-primary">
                Upload new photo
                <input type="file" id="editProfileImage" name="editProfileImage" class="account-settings-fileinput" style="display: none;">
            </label>
            &nbsp;
            <button type="button" class="btn btn-default md-btn-flat btn-outline-danger" onclick="resetImage()">Reset</button>
        </div>

        <div class="card-body">
            <div class="form-group">
                <label class="form-label">Username</label>
                <div class="readonly-field"><%= user.username %></div>
            </div>            
            <div class="form-group">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="name" value="<%= user.name %>">
            </div>
            <div class="form-group">
                <label class="form-label">E-mail</label>
                <input type="text" class="form-control mb-1" name="email" value="<%= user.email %>">
            </div>
        </div>
    </div>

    <!-- Change Password -->
    <div id="changePassword" class="content">
        <div class="form-group">
            <label class="form-label">Current password</label>
            <input type="password" class="form-control" name="currentPassword">
        </div>
        <div class="form-group">
            <label class="form-label">New password</label>
            <input type="password" class="form-control" name="newPassword">
        </div>
        <div class="form-group">
            <label class="form-label">Repeat new password</label>
            <input type="password" class="form-control" name="repeatPassword">
        </div>
    </div>

    <!-- Information -->
    <div id="information" class="content">
        <div class="card-body pb-2">
            <!-- Add more fields as needed -->
        </div>
    </div>

    <!-- Submit Button -->
    <div class="submitButton">
        <div class="text-right mt-3">
            <button type="submit" class="btn btn-primary">Save changes</button>
            &nbsp;
            <button type="button" class="btn btn-danger">Cancel</button>
        </div>
    </div>
</form>

